{
	/*	TODO heredoc (<<[-]token...token)
		TODO variables ($variable)
		TODO command-interpolation (`...` + $(...))
		TODO maybe do include of perl/ruby etc. for perl <<EOF or perl -e '...'
	*/
	name = "Unix shell (generic)";
	scopeName = "source.shell";
	keyEquivalent = "~^S";
	fileTypes = ( sh, ss );

  foldingStartMarker = "\\{";
  foldingStopMarker = "\\}";
  smartTypingPairs = (
      ( "(", ")" ), ( "[", "]" ), ( "{", "}" ),
      ( "\"", "\"" ), ( "'", "'" )
  );
  highlightPairs = (
      ( "(", ")" ), ( "[", "]" ), ( "{", "}" )
  );

	foregroundColor = "#DBFEF8";
	backgroundColor = "#2F4F4F";

	patterns = (
		{ name = "keyword.function.shell"; match = "\\<(.*)\\>(\s*)\\(\\)"; fontStyle = ( bold );},
		{ name = "keyword.control.shell"; match = "\\<(?:if|then|else|elif|fi|for|in|do|done|select|case|continue|esac|while|until)\\>"; },
		{ name = "keyword.storage.shell"; match = "\\<(?:export)\\>"; },
		{ name = "constant.numeric.shell"; match = "\\<((0(x|X)[0-9a-fA-F]*)|(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)(L|l|UL|ul|u|U|F|f)?\\>"; foregroundColor = "#F0F8FF"; },
		{ name = "string.single-quoted.shell"; begin = "'"; end = "'"; foregroundColor = "#FFFCCF"; },
        { name = "string.double-quoted.shell"; begin = "\""; end = "\"";  swallow = "\\\\."; foregroundColor = "#FFFCCF"; },
        { name = "string.back-quoted.shell"; begin = "`"; end = "`"; swallow = "\\\\."; foregroundColor = "#FFFCCF"; },
        { name = "string.dollar-quoted.shell"; begin = "\\$'"; end = "'";  swallow = "\\\\."; foregroundColor = "#FFFCCF"; },
        { name = "string.shell-interpolation.shell"; begin = "\\$\\("; end = "\\)"; swallow = "\\\\."; foregroundColor = "#FFFCCF"; },
        { name = "string.math.shell"; begin = "\\$\\(\\("; end = "\\)\\)"; swallow = "\\\\."; foregroundColor = "#FFFCCF"; },

		{ name = "comment.line.shell"; match = "#[^{](.*)"; "fontStyle" = ( italic ); foregroundColor = "#E6E8FA"; },
		{ name = "comment.line.shell.lonepound"; match = "#$"; "fontStyle" = ( italic ); foregroundColor = "#E6E8FA"; }
	);
	uuid = "DDEEA3ED-6B1C-11D9-8B10-000D93589AF6";
}

