{
	name = "Unix shell (generic)";
	fileTypes = ( sh, ss );

  foldingStartMarker = "\\{";
  foldingStopMarker = "\\}";
  smartTypingPairs = (
      ( "(", ")" ), ( "[", "]" ), ( "{", "}" ),
      ( "\"", "\"" ), ( "'", "'" )
  );
  highlightPairs = (
      ( "(", ")" ), ( "[", "]" ), ( "{", "}" )
  );

	foregroundColor = "#DBFEF8";
	backgroundColor = "#2F4F4F";

	patterns = (
		{ name = "keywords.functions.shell"; match = "\\<(.*)\\>(\s*)\\(\\)"; fontStyle = ( bold );},
		{ name = "constants.numeric.shell"; match = "\\<((0(x|X)[0-9a-fA-F]*)|(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)(L|l|UL|ul|u|U|F|f)?\\>"; foregroundColor = "#F0F8FF"; },
		{ name = "strings.single-quoted.shell"; begin = "'"; end = "'"; swallow = "\\\\."; foregroundColor = "#FFFCCF"; },
	    { name = "strings.double-quoted.shell"; begin = "\""; end = "\"";  foregroundColor = "#FFFCCF";   },
	
		{ name = "comments.line.shell"; match = "#[^{](.*)"; "fontStyle" = ( italic ); foregroundColor = "#E6E8FA"; },
		{ name = "comments.line.shell.lonepound"; match = "#$"; "fontStyle" = ( italic ); foregroundColor = "#E6E8FA"; }
	);
}

